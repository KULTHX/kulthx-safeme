<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>KULTHX SAFEME - حماية نصوص Roblox</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@700;800;900&display=swap" rel="stylesheet">
  <style>
    @tailwind base;
    @tailwind components;
    @tailwind utilities;

    body {
      background: linear-gradient(135deg, theme('colors.darkPrimary') 0%, theme('colors.darkSecondary') 100%);
      font-family: 'Inter', sans-serif;
      color: theme('colors.textLight');
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    h1, h2, h3 {
      font-family: 'Montserrat', sans-serif;
    }

    .glass-card {
      background: theme('colors.glassMorphism');
      border: 1px solid theme('colors.glassBorder');
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
    }

    .gradient-text {
      background-clip: text;
      -webkit-background-clip: text;
      color: transparent;
      background-image: linear-gradient(to right, theme('colors.gradientStart'), theme('colors.gradientEnd'));
    }

    .btn-primary {
      background: linear-gradient(to right, theme('colors.buttonPrimary'), theme('colors.gradientEnd'));
      transition: all 0.3s ease;
    }

    .btn-primary:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    /* Custom animations for toast notifications */
    @keyframes slideIn {
      from { transform: translateY(-100%); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    @keyframes slideOut {
      from { transform: translateY(0); opacity: 1; }
      to { transform: translateY(-100%); opacity: 0; }
    }
    .toast {
      animation: slideIn 0.3s ease-out forwards;
    }
    .toast.hide {
      animation: slideOut 0.3s ease-out forwards;
    }
  </style>
</head>
<body>
  <!-- Toast Notification Container -->
  <div id="toast" class="fixed top-4 right-4 z-50 hidden bg-green-600 text-white px-4 py-2 rounded-lg shadow-lg">
    <span id="toastMessage"></span>
  </div>

  <!-- Sidebar Toggle Button -->
  <button id="sidebarToggle" class="fixed top-4 left-4 z-50 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white p-3 rounded-full shadow-lg transition-all duration-200 hover:scale-105 hover:shadow-xl">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>

  <!-- Sidebar -->
  <div id="sidebar" class="fixed top-0 left-0 h-full w-64 bg-darkPrimary/95 glass-card transform -translate-x-full transition-transform duration-300 ease-in-out z-40 shadow-2xl border-r border-glassBorder">
    <div class="p-6">
      <h2 class="text-2xl font-display font-bold gradient-text">KULTHX SAFEME</h2>
      <ul class="mt-8 space-y-4">
        <li><a href="/real-home" class="block text-lg hover:bg-darkAccent px-4 py-3 rounded-md transition-all duration-200">🏠 الرئيسية</a></li>
        <li><a href="/my-scripts" class="block text-lg hover:bg-darkAccent px-4 py-3 rounded-md transition-all duration-200">📜 نصوصي</a></li>
        <li><a href="#about" class="block text-lg hover:bg-darkAccent px-4 py-3 rounded-md transition-all duration-200">ℹ حول</a></li>
      </ul>
    </div>
  </div>

  <header class="bg-darkPrimary/80 glass-card p-6 shadow-lg border-b border-glassBorder">
    <nav class="flex justify-end items-center max-w-7xl mx-auto">
      <h1 class="text-4xl font-display font-extrabold gradient-text tracking-tight">🔒 KULTHX SAFEME</h1>
    </nav>
  </header>

  <main class="flex-grow max-w-7xl mx-auto p-8">
    <section class="text-center py-20 glass-card rounded-lg shadow-xl">
      <div class="mb-8">
        <h2 class="text-5xl font-display font-bold mb-6 gradient-text">حماية نصوص Roblox</h2>
        <p class="text-xl mb-8 text-textLight max-w-3xl mx-auto leading-relaxed">قم بتشفير ومشاركة نصوصك بأمان مع loadstring فريد لمنفذي Roblox!</p>
      </div>
      
      <div class="flex justify-center mb-8">
        <div class="relative w-full max-w-4xl">
          <textarea id="scriptInput" rows="8" class="w-full p-6 bg-darkSecondary/80 border border-glassBorder rounded-lg text-textLight focus:ring-2 focus:ring-gradientStart focus:border-gradientEnd transition-all duration-300 placeholder-textMuted text-lg" placeholder="الصق نص Roblox الخاص بك هنا..."></textarea>
        </div>
      </div>
      
      <button id="protectBtn" class="btn-primary text-white font-bold py-4 px-8 rounded-lg shadow-lg text-lg">
        🚀 احم نصك
      </button>
      
      <div id="result" class="mt-8 hidden">
        <div class="glass-card rounded-lg p-6 max-w-4xl mx-auto">
          <p class="text-green-400 font-semibold text-lg mb-4">✅ Loadstring النص المحمي:</p>
          <div class="relative">
            <input id="scriptLink" type="text" readonly class="w-full p-4 bg-darkSecondary/80 border border-glassBorder rounded-lg text-textLight text-sm font-mono">
          </div>
          <button id="copyBtn" class="btn-primary mt-4 text-white py-3 px-6 rounded-lg shadow-lg">📋 نسخ Loadstring</button>
        </div>
      </div>
    </section>

    <section id="about" class="py-20">
      <h2 class="text-4xl font-display font-bold mb-12 text-center gradient-text">ℹ حول KULTHX SAFEME</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="glass-card p-8 rounded-lg shadow-xl hover:scale-105 transition-all duration-300">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-r from-gradientStart to-gradientEnd rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">🛡️</span>
            </div>
            <h3 class="text-2xl font-display font-semibold gradient-text">ما هو KULTHX SAFEME؟</h3>
          </div>
          <p class="text-textLight leading-relaxed">منصة مبتكرة لحماية نصوص Roblox، تقدم حلولاً آمنة لتحويل نصوصك إلى روابط مشفرة للاستخدام الآمن داخل اللعبة.</p>
        </div>
        
        <div class="glass-card p-8 rounded-lg shadow-xl hover:scale-105 transition-all duration-300">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-r from-gradientEnd to-cyan-500 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">⚙️</span>
            </div>
            <h3 class="text-2xl font-display font-semibold gradient-text">كيف يعمل</h3>
          </div>
          <p class="text-textLight leading-relaxed">أدخل نصك، وسنقوم بتخزينه بأمان، مع إنشاء loadstring فريد للاستخدام في Roblox عبر HttpGet.</p>
        </div>
        
        <div class="glass-card p-8 rounded-lg shadow-xl hover:scale-105 transition-all duration-300">
          <div class="text-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-r from-cyan-500 to-gradientStart rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">⭐</span>
            </div>
            <h3 class="text-2xl font-display font-semibold gradient-text">لماذا تختارنا؟</h3>
          </div>
          <ul class="text-textLight space-y-3">
            <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> تشفير قوي لحماية نصوصك</li>
            <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> واجهة حديثة وسهلة الاستخدام</li>
            <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> loadstring فريد وآمن لكل نص</li>
            <li class="flex items-center"><span class="text-green-400 mr-2">✓</span> تحديثات ودعم مستمر</li>
          </ul>
        </div>
      </div>
    </section>
  </main>

  <footer class="bg-darkPrimary/90 glass-card p-8 text-center border-t border-glassBorder mt-auto">
    <div class="max-w-4xl mx-auto">
      <div class="mb-6">
        <h3 class="text-2xl font-display font-bold gradient-text mb-2">KULTHX SAFEME</h3>
        <p class="text-lg text-textLight">© 2025 جميع الحقوق محفوظة ✨</p>
      </div>
      
      <div class="flex justify-center items-center space-x-4 mb-4">
        <div class="glass-card rounded-full px-6 py-3">
          <span class="text-sm text-textMuted">👥 المستخدمون المتصلون:</span>
          <span id="onlineUsers" class="bg-gradient-to-r from-gradientStart to-gradientEnd text-white px-4 py-1 rounded-full ml-2 font-semibold">0</span>
        </div>
      </div>
      
      <div class="text-sm text-textMuted">
        <p>منصة آمنة وموثوقة لحماية نصوص Roblox</p>
      </div>
    </div>
  </footer>

  <script>
    // Generate or retrieve user ID
    let userId = localStorage.getItem("userId");
    if (!userId) {
      userId = crypto.randomUUID();
      localStorage.setItem("userId", userId);
    }

    // Socket.IO for online users
    const socket = io();
    socket.on("onlineUsers", (count) => {
      document.getElementById("onlineUsers").textContent = count;
    });

    // Sidebar toggle
    const sidebar = document.getElementById("sidebar");
    const sidebarToggle = document.getElementById("sidebarToggle");
    sidebarToggle.addEventListener("click", () => {
      sidebar.classList.toggle("-translate-x-full");
    });

    // Toast notification function
    function showToast(message, type = "success") {
      const toast = document.getElementById("toast");
      const toastMessage = document.getElementById("toastMessage");
      toastMessage.textContent = message;
      toast.className = `fixed top-4 right-4 z-50 px-4 py-2 rounded-lg shadow-lg ${type === "success" ? "bg-green-600" : "bg-red-600"} text-white toast`;
      toast.classList.remove("hidden");
      setTimeout(() => {
        toast.classList.add("hide");
        setTimeout(() => toast.classList.add("hidden"), 300);
      }, 3000);
    }

    // Protect script
    document.getElementById("protectBtn").addEventListener("click", async () => {
      const script = document.getElementById("scriptInput").value;
      if (!script) {
        showToast("Please enter a script!", "error");
        return;
      }

      try {
        const response = await fetch("/generate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ script, userId })
        });
        const data = await response.json();
        if (data.error) {
          showToast(data.error, "error");
          if (data.loadstring) {
            const resultDiv = document.getElementById("result");
            const scriptLink = document.getElementById("scriptLink");
            scriptLink.value = data.loadstring;
            resultDiv.classList.remove("hidden");
          }
          return;
        }

        const resultDiv = document.getElementById("result");
        const scriptLink = document.getElementById("scriptLink");
        scriptLink.value = data.loadstring;
        resultDiv.classList.remove("hidden");
        showToast("Script protected successfully!");
      } catch (err) {
        showToast("Error generating loadstring!", "error");
      }
    });

    // Copy loadstring
    document.getElementById("copyBtn").addEventListener("click", () => {
      const scriptLink = document.getElementById("scriptLink");
      scriptLink.select();
      document.execCommand("copy");
      showToast("Loadstring copied to clipboard!");
    });
  </script>
</body>
</html>


